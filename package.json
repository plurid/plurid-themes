{
    "name": "@plurid/apps.utilities.styled-react",
    "version": "0.1.0",
    "description": "Styled React Components for Plurid Apps",
    "keywords": [
        "plurid",
        "styled",
        "components"
    ],
    "author": "Jan Cavel <caveljan@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/apps-utilities-styled-react"
    },
    "bugs": {
        "email": "feedback@plurid.com",
        "url": "https://github.com/plurid/apps-utilities-styled-react/issues"
    },
    "homepage": "https://github.com/plurid/apps-utilities-styled-react",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/"
    ],
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "jsnext:main": "dist/index.es.js",
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "scripts": {
        "prepublishOnly": "yarn build.rollup",
        "github.copy": "cp -r src github/ && cp {.editorconfig,.gitignore,LICENSE,package.json,README.md,rollup.config.js,tsconfig.json,tsconfig.test.json,tslint.json,yarn.lock} github/",
        "github.clean": "rm -rf github/* && rm {github/.editorconfig,github/.gitignore}",
        "github": "yarn github.clean && yarn github.copy",
        "clean": "rm -rf ./dist",
        "test": "cross-env CI=1 react-scripts-ts test --env=jsdom",
        "test.watch": "react-scripts-ts test --env=jsdom",
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
        "build": "yarn clean && yarn test && yarn lint && yarn build.rollup",
        "build.rollup": "rollup -c",
        "build.clean": "yarn clean && yarn build.rollup",
        "start": "yarn clean && rollup -c -w"
    },
    "peerDependencies": {
        "prop-types": ">=15",
        "react": ">=16",
        "react-dom": ">=16",
        "styled-components": ">=4"
    },
    "devDependencies": {
        "@svgr/rollup": "^4.3.1",
        "@types/enzyme": "^3.10.2",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.15",
        "@types/react": "^16.8.23",
        "@types/react-dom": "^16.8.4",
        "@types/styled-components": "^4.1.18",
        "babel-core": "^6.26.3",
        "babel-runtime": "^6.26.0",
        "cross-env": "^5.2.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "prop-types": "^15.7.2",
        "react": "^16.8.3",
        "react-dom": "^16.8.3",
        "react-test-renderer": "^16.8.6",
        "rollup": "^1.16.7",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.0.1",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "^2.2.0",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-typescript2": "^0.21.2",
        "rollup-plugin-url": "^2.2.2",
        "styled-components": "^4.3.2",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.5.3"
    },
    "dependencies": {
    }
}
