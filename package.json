{
    "name": "@plurid/plurid-themes",
    "version": "0.1.7",
    "description": "Themes for Plurid Apps",
    "keywords": [
        "plurid",
        "themes",
        "components"
    ],
    "author": "Jan Cavel <caveljan@plurid.com> (https://plurid.com)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/plurid-themes"
    },
    "bugs": {
        "email": "feedback@plurid.com",
        "url": "https://github.com/plurid/plurid-themes/issues"
    },
    "homepage": "https://github.com/plurid/plurid-themes",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "build/"
    ],
    "main": "build/index.js",
    "module": "build/index.es.js",
    "jsnext:main": "build/index.es.js",
    "engines": {
        "node": ">=8",
        "npm": ">=5"
    },
    "scripts": {
        "spec": "jest",
        "lint": "eslint ./source/index.ts",
        "clean": "rm -rf ./build",
        "start": "yarn clean && rollup -c -w",
        "build.dev": "yarn clean && rollup -c",
        "build.prod": "rollup -c --environment BUILD:production",
        "build": "yarn clean && yarn lint && yarn spec && yarn build.prod",
        "prepublishOnly": "yarn build"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@typescript-eslint/eslint-plugin": "^2.10.0",
        "@typescript-eslint/parser": "^2.10.0",
        "eslint": "^6.7.2",
        "jest": "^24.9.0",
        "rollup": "^1.27.8",
        "rollup-plugin-typescript2": "^0.25.3",
        "ts-jest": "^24.2.0",
        "typescript": "^3.7.3"
    }
}
